{
  "MongoDbSettings": {
    // The connection string used to connect to the MongoDB server.
    // This should include the server address and port, as well as any
    // authentication details if required.
    "ConnectionString": "mongodb://localhost:27017",

    // The name of the MongoDB database to be used for the application.
    // This database will contain collections relevant to the application's
    // data management.
    "DatabaseName": "MyAppDatabase",

    // The name of the collection within the database that will store user documents.
    // This is where all user-related data will be persisted.
    "UserCollectionName": "Users"
  }
}
